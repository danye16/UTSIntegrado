@model UsuarioModel;
@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="" asp-action="CambiarContraseña" asp-controller="LoginUsuario" method="post">
    <div class="form-floating mb-3">
        <input type="email" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com" name="correo" required />
        <label for="floatingInput">Correo</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password" name="contraseña" required />
        <label for="floatingPassword">Contraseña</label>
    </div>
    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-outline-warning" type="submit">Cambiar Contraseña </button>
    @if (ViewData["Mensaje"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["Mensaje"]
        </div>
    }
</form>

